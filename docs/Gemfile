source 'https://rubygems.org'

gem "jekyll", "~> 4.3" # installed by `gem jekyll`
# gem "webrick"        # required when using Ruby >= 3 and Jekyll <= 4.2.2

gem "just-the-docs", "~> 0.10.1"

# just-the-docs 0.10.1 currently broken with sass-embedded above 1.78
gem "sass-embedded", "~> 1.78.0"

# jekyll-relative-links turns .md links into .html links
# so the docs can be read directly on github as well as pages
gem "jekyll-relative-links", "~> 0.6.1"

# make it easy to check the integrity of the generated site
gem 'html-proofer', '~> 5.0', '>= 5.0.10'
